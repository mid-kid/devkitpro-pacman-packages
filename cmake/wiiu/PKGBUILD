# Maintainer: fincs <fincs@devkitpro.org>
pkgname=wiiu-cmake
pkgver=1.3.0
pkgrel=1
pkgdesc="CMake support for Nintendo Wii U"
arch=('any')
url='https://devkitpro.org/'
source=(
  'powerpc-eabi-cmake'
  'WiiU.cmake'
  'CafeOS.cmake'
)

depends=('devkitppc-cmake' 'wut-tools' 'wiiu-pkg-config')
groups=('wiiu-dev')
options=('!strip')
sha256sums=(
  'f17d338c2c6416099a264855336d915ce2d70071b356e9d13b8f712b9daa1730' # powerpc-eabi-cmake
  'aa700f77d627852ad4ae96602b12f3652a28b6b5f7c3b8a6f9c0dc1460996d2c' # WiiU.cmake
  '202c00f991e41002f5a51bad629c9d13a1650de8e2175e6968c71232e092fd55' # CafeOS.cmake
)

package() {

  install -d "$pkgdir$DEVKITPRO"/portlibs/wiiu/bin
  cp "$srcdir"/powerpc-eabi-cmake "$pkgdir$DEVKITPRO"/portlibs/wiiu/bin/
  install -d "$pkgdir$DEVKITPRO"/cmake
  cp "${srcdir}"/WiiU.cmake "$pkgdir$DEVKITPRO"/cmake
  install -d "$pkgdir$DEVKITPRO"/cmake/Platform
  cp "${srcdir}"/CafeOS.cmake "$pkgdir$DEVKITPRO"/cmake/Platform

}
