package() {
  install -d "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-initialize-path.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-toolchain-common.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-impl-helpers.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-rule-overrides.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-linker-utils.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-custom-target.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-embedded-binary.cmake "$pkgdir$DEVKITPRO"/cmake
  cp "$srcdir"/dkp-asset-folder.cmake "$pkgdir$DEVKITPRO"/cmake
  install -d "$pkgdir$DEVKITPRO"/cmake/Platform
  cp "$srcdir"/Generic-dkP.cmake "$pkgdir$DEVKITPRO"/cmake/Platform
}
