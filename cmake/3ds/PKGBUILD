# Maintainer: WinterMute <davem@devkitpro.org>
pkgname=3ds-cmake
pkgver=1.5.0
pkgrel=1
pkgdesc="CMake support for Nintendo 3DS"
arch=('any')
url='http://devkitpro.org/'
source=(
  '3DS.cmake'
  'Nintendo3DS.cmake'
  'arm-none-eabi-cmake'
)
options=('!strip')
depends=('devkitarm-cmake' '3dstools' 'picasso' 'tex3ds' '3ds-pkg-config')
groups=('3ds-dev')

sha256sums=(
  '80bdd830820bfafc3b56944d26179f3399a4f54baea2ecc35e9fedab93a0ef8d'  # 3DS.cmake
  '05ec82ade3cfb4cfe94852c1d51984d2d4b8fdb9bec5ee9ded31195d847614ae'  # Nintendo3DS.cmake
  'f4bbf2fab22c7ecd091fb755464795e915a4f46269ae15a094bce7c21ddf2aa2'  # arm-none-eabi-cmake
)

package() {

  install -d "$pkgdir$DEVKITPRO"/portlibs/3ds/bin
  cp "$srcdir"/arm-none-eabi-cmake "$pkgdir$DEVKITPRO"/portlibs/3ds/bin/
  install -d "$pkgdir$DEVKITPRO"/cmake
  cp "${srcdir}"/3DS.cmake "$pkgdir$DEVKITPRO"/cmake
  install -d "$pkgdir$DEVKITPRO"/cmake/Platform
  cp "${srcdir}"/Nintendo3DS.cmake "$pkgdir$DEVKITPRO"/cmake/Platform

}
