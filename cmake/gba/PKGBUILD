# Maintainer: fincs <fincs@devkitpro.org>
pkgname=gba-cmake
pkgver=1.0.1
pkgrel=1
pkgdesc="CMake support for Nintendo GBA"
arch=('any')
url='https://devkitpro.org/'
source=(
  'arm-none-eabi-cmake'
  'GBA.cmake'
  'NintendoGBA.cmake'
)
options=('!strip')
depends=('devkitarm-cmake' 'gba-tools' 'grit' 'mmutil' 'gba-pkg-config')
groups=('gba-dev')

sha256sums=('965e5f99e083b0c6f77372d2a46d5cc353c883fca8b612e7d744e3cfa71ab4da'
            '4f9df4fdb4b443754cb76871ebd46db1b2e3f297703687e9bfd4537531b2572e'
            '455e29d0a1dc9c45290070d38a68811fda9eddaab05183eb4e834322fc18fd9a')

package() {

  install -d "$pkgdir$DEVKITPRO"/portlibs/gba/bin
  cp "$srcdir"/arm-none-eabi-cmake "$pkgdir$DEVKITPRO"/portlibs/gba/bin/
  install -d "$pkgdir$DEVKITPRO"/cmake
  cp "${srcdir}"/GBA.cmake "$pkgdir$DEVKITPRO"/cmake
  install -d "$pkgdir$DEVKITPRO"/cmake/Platform
  cp "${srcdir}"/NintendoGBA.cmake "$pkgdir$DEVKITPRO"/cmake/Platform

}
