# Contributor: Cameron Cawley <ccawley2011@gmail.com>
pkgname=nds-cmake
pkgver=1.2.1
pkgrel=1
pkgdesc="CMake support for Nintendo DS"
arch=('any')
url='https://devkitpro.org/'
source=(
  'arm-none-eabi-cmake'
  'NDS.cmake'
  'NintendoDS.cmake'
)
options=('!strip')
depends=('devkitarm-cmake' 'ndstool' 'grit' 'mmutil' 'nds-pkg-config')
groups=('nds-dev')

sha256sums=('4e4eb21c4de42f18caffff9d97eb47e9f368991fd6e429b00dee9edf20a721ae'
            'a14dfbf6947cb90e80ce593db8392d270037f80ec636b102ebda6d49960f9e43'
            '6b33cfd879136f854e1be25adb3c131b033fd85212db95f4bb598d0c1982f8b7')

package() {

  install -d "$pkgdir$DEVKITPRO"/portlibs/nds/bin
  cp "$srcdir"/arm-none-eabi-cmake "$pkgdir$DEVKITPRO"/portlibs/nds/bin/
  install -d "$pkgdir$DEVKITPRO"/cmake
  cp "${srcdir}"/NDS.cmake "$pkgdir$DEVKITPRO"/cmake
  install -d "$pkgdir$DEVKITPRO"/cmake/Platform
  cp "${srcdir}"/NintendoDS.cmake "$pkgdir$DEVKITPRO"/cmake/Platform

}
