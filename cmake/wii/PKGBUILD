# Maintainer: WinterMute <davem@devkitpro.org>
pkgname=wii-cmake
pkgver=1.0.0
pkgrel=2
pkgdesc="CMake support for Nintendo Wii"
arch=('any')
url='http://devkitpro.org/'
source=(
  'Wii.cmake'
  'NintendoWii.cmake'
  'powerpc-eabi-cmake'
)
options=('!strip')
depends=('ogc-cmake' 'wii-pkg-config')
groups=('wii-dev')

sha256sums=(
  'f9b17b4f5c3be859e5f9b6fa459049fbffbe7ea8c0a42a923de6323e3b797b02'  # Wii.cmake
  'e7b633ac937e2b790b948de11877c09c7f1c0d4d2531a2adfb418b8753e81e85'  # NintendoWii.cmake
  'd1b3443ebfd94ddfb6e53a7f7bf72b6168af2a30016f9399b17bf9930c353576'  # powerpc-eabi-cmake
)

package() {

  install -d "$pkgdir$DEVKITPRO"/portlibs/wii/bin
  cp "$srcdir"/powerpc-eabi-cmake "$pkgdir$DEVKITPRO"/portlibs/wii/bin/
  install -d "$pkgdir$DEVKITPRO"/cmake
  cp "${srcdir}"/Wii.cmake "$pkgdir$DEVKITPRO"/cmake
  install -d "$pkgdir$DEVKITPRO"/cmake/Platform
  cp "${srcdir}"/NintendoWii.cmake "$pkgdir$DEVKITPRO"/cmake/Platform

}
