# Maintainer:  Mary Strodl <ipadlover8322@gmail.com>

pkgname=ppc-harfbuzz
pkgver=7.2.0
pkgrel=1
pkgdesc='HarfBuzz is a text shaping library. Using the HarfBuzz library allows programs to convert a sequence of Unicode input into properly formatted and positioned glyph outputâ€”for any writing system and language.'
arch=('any')
url='https://harfbuzz.github.io/'
license=(LGPL)
options=(!strip libtool staticlibs)
source=("https://github.com/harfbuzz/harfbuzz/releases/download/$pkgver/harfbuzz-$pkgver.tar.xz")
sha256sums=('fc5560c807eae0efd5f95b5aa4c65800c7a8eed6642008a6b1e7e3ffff7873cc')
makedepends=('ppc-pkg-config' 'dkp-toolchain-vars' 'devkitppc-cmake')
depends=('ppc-freetype')

groups=('ppc-portlibs')

build() {

  cd harfbuzz-${pkgver}

  source "${DEVKITPRO}/ppcvars.sh"

  export CXXFLAGS="${CXXFLAGS} -DHB_NO_MT"

  ./configure --prefix=${PORTLIBS_PREFIX} --host=powerpc-eabi --disable-shared --enable-static

  make
}

package() {

  cd harfbuzz-${pkgver}

  make install DESTDIR=${pkgdir}

  rm -fr ${pkgdir}/${PORTLIBS_PREFIX}/share

}
